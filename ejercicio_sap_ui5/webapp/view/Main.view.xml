<mvc:View
    controllerName="com.proy.ejerciciosapui5.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        showHeader="false"
        enableScrolling="true"
        class="sapUiContentPadding"
        showNavButton="false"
    >
        <content>
		<SearchField liveChange=".onSearch" />
            <Table
                id="idProductsTable"
                inset="false"
                items="{
        path: 'mock>/ProductCollection',
        sorter: {
            path: 'Name'
        }
    }"
            >
                <columns>
                    <Column width="12em">
                        <Text text="{i18n>Products}" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="{i18n>Supplier}" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="{i18n>Dimensions}" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="Center"
                    >
                        <Text text="{i18n>Weight}" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="{i18n>Price}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <ObjectIdentifier
                                title="{mock>Name}"
                                text="{mock>ProductId}"
                            />
                            <Text text="{mock>SupplierName}" />
                            <Text
                                text="{mock>Width} x {mock>Depth} x {mock>Height} {mock>DimUnit}"
                            />
                            <ObjectNumber
                                number="{mock>WeightMeasure}"
                                unit="{mock>WeightUnit}"
                                state="{
							parts: [
								{path: 'mock>WeightMeasure'},
								{path: 'mock>WeightUnit'}
							],
							formatter: '.Formatter.weightState'
						}"
                            />
                            <ObjectNumber
                                number="{
								parts:[{path:'mock>Price'},{path:'mock>CurrencyCode'}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {showMeasure: false}
							}"
                                unit="{mock>CurrencyCode}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
